<%- include('./partials/headcreate'); %> 
<%- include('./partials/headerclean'); %> 

<link rel='stylesheet' href='stylesheets/styleedit.css' />

<main class="container">
<section class="formulario mt-5" id="formulario">
<div class="row">
<div class="booking-form-box">

<h3 class="ml-1">Altere sua rezerva</h3>
<form action="/rezervas/update <%= rezerva.id %> " method="POST">
<div class="booking-form">
<div class="input-grp">
<label>Horário do Check-in</label>
<input type="time" class="form-control" value="<%= rezerva.Horario %>" name="horario" id="horario">
</div>

<div class="input-grp">
<label>Escolha uma data</label>
<input type="date" class="form-control" value="<%= rezerva.Data %>" name ="Data" id="Data">
</div>

<div class="input-grp">
<label>Adultos</label>
<input type="number" class="form-control" value="<%= rezerva.Adulto %>" name="Adulto" id="Adulto">
</div>

<div class="input-grp">
<label>Crianças</label>
<input type="number" class="form-control" value="<%= rezerva.Crianca %>" name="Crianca" id="Crianca">
</div>

<div class="input-grp">
<label>Escolha um setor</label>
<select class="custom-select" value="<%= rezerva.Setor %>" name="Setor" id="Setor">  
<option value="1">Mezanino</option>
<option value="2">Jardim</option>
<option value="3">Area Vip</option>
</select>
</div>

<!-- Typeof aqui -->

<div class="input-group my-1">
<button type="submit" class="btn- btn-primary flight">Rezervar</button>
</div>

</div>
</div>
<!-- payment -->
<div class="booking-form-box ml-5">

  <h3 class="ml-2">Pagamento</h3>

  <div class="booking-form">
  <label>Nome</label>
  <input type="text" class="form-control" placeholder="Name">
  
  <label>Number</label>
  <input type="text" class="form-control" placeholder="Number">
  
  <div class="input-grp">
  <label>Validade</label>
  <input type="date" class="form-control select-date">
  </div>
  
  <div class="input-grp">
  <label>CVV</label>
  <input type="date" class="form-control select-date">
  </div>
  
  <div class="input-grp">
  <label>Parcelameto</label>
  <select class="custom-select">  
  <option value="1">1-Parcela</option>
  <option value="2">2-Parcela</option>
  <option value="3">3-Parcela</option>
  </select>
  </div>
  
  <div class="input-group my-1">
  <button type="submit" class="btn- btn-primary flight">Confirmar</button>
</div>
  
</div>
</div>
</div>

</form>
</section>
</main>
 
<!-- </form> -->
</section>
</main>
 
 <!-- area footer -->
 <%- include('./partials/footer'); %>
</body> 
</html>